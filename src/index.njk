---
layout: home.njk
title: Aging Coder
eleventyExcludeFromCollections: true
pagination:
    data: collections.posts
    size: 5
    alias: post
---
{% for post in pagination.items %}
    <article class="card">
        {% if post.data.imagefeature %}
            <div class="cover-thumb">
                {% thumbnail post.data.imagefeature, post.data.title, alt=(post.data.imagecaption or ('Cover image for ' ~ post.data.title)) %}
            </div>
        {% else %}
            <div class="cover-thumb cover-thumb--square">
                {% thumbnail site.logo, site.title %}
            </div>
        {% endif %}
        <div class="card-content">
            <header>
                <h3>
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h3>
            </header>
            <section class="excerpt">
                <p>{{ post | excerpt(240) }}</p>
            </section>
            <div class="post-tags">
                {% if post.data.category %}
                    <a href="/categories/index.html#{{ post.data.category | url }}" class="tag-pill">
                        {{ post.data.category | capitalize }}
                    </a>
                {% endif %}
            </div>
        </div>
    </article>
{% endfor %}

<style>
@media (min-width: 700px) {
  main > article {
    display: grid !important;
    grid-template-columns: 120px 1fr;
    align-items: flex-start;
  }
}
</style>

<nav class="pagination" role="navigation">
    {% if pagination.href.previous %}
            <a class="newer-posts" href="{{ pagination.href.previous }}">‹ Newer</a>
    {% else %}
        <span class="newer-posts faded">‹ Newer</span>
    {% endif %}

    <span class="page-number">Page</span>

    {% if pagination.href.next %}
        <a class="older-posts" href="{{ pagination.href.next }}">Older ›</a>
    {% else %}
        <span class="older-posts faded">Older ›</span>
    {% endif %}
</nav>
