---
layout: home.njk
title: CV
permalink: /cv/index.html
extra_css:
  - /assets/css/cv.css
extra_js:
  - /assets/js/cv.js
---

<script>
  window.CV_CHAT_ENDPOINT = "{{ env.CV_CHAT_ENDPOINT | default('') }}"
  window.CV_FIT_ENDPOINT = "{{ env.CV_FIT_ENDPOINT | default('') }}"
</script>

<div class="cv-container">
  <header class="cv-header">
    <div class="cv-name">{{ cv.personal.name }}</div>
    <div class="cv-contact">
      <span>{{ cv.personal.location }}</span> |
      <a href="mailto:{{ cv.personal.email }}">{{ cv.personal.email }}</a>
    </div>
    <div class="cv-links">
      <a href="{{ cv.personal.github }}" target="_blank">GitHub</a> |
      <a href="{{ cv.personal.linkedin }}" target="_blank">LinkedIn</a>
    </div>
    <div class="cv-actions">
      <button type="button" class="cv-action-btn" id="btn-digital-assistant">
        Digital Assistant
      </button>
      <button type="button" class="cv-action-btn" id="btn-fit-assessment">
        Fit Assessment
      </button>
      <button type="button" class="cv-action-btn" id="btn-about-cv">
        About this Interactive CV
      </button>
    </div>
  </header>

  <section class="cv-section">
    <h2 class="cv-section-title">Executive Summary</h2>
    <div class="cv-summary">
      <ul>
        {%- for bullet in cv.summary %}
        <li><span>{{ bullet }}</span></li>
        {%- endfor %}
      </ul>
      <div class="summary-actions">
        <button class="more-info-btn" type="button" data-section="summary">
          More info
        </button>
      </div>
    </div>
  </section>

  <section class="cv-section">
    <h2 class="cv-section-title">Professional Experience</h2>
    {%- for exp in cv.experience %}
    <div class="cv-experience-item">
      <div class="exp-header" data-exp-index="{{ loop.index0 }}">
        <div class="exp-title-row">
          <h3 class="exp-title">{{ exp.title }}</h3>
          <div class="exp-actions">
            <button
              class="exp-toggle toggle"
              type="button"
              aria-expanded="false"
              aria-controls="exp-details-{{ loop.index0 }}"
            >
              ▼
            </button>
          </div>
        </div>
        <div class="exp-meta">
          <span class="exp-company">{{ exp.company }}</span>
          <span class="exp-location">{{ exp.location }}</span>
          <span class="exp-period">{{ exp.period }}</span>
        </div>
      </div>
      <div
        class="exp-details"
        id="exp-details-{{ loop.index0 }}"
        aria-hidden="true"
      >
        <ul class="exp-achievements">
          {%-for achievement in exp.achievements %}
          <li>{{ achievement }}</li>
          {%- endfor %}
        </ul>
        <div class="detail-actions">
          <button
            class="more-info-btn"
            type="button"
            data-section="experience"
            data-index="{{ loop.index0 }}"
          >
            More info
          </button>
        </div>
      </div>
    </div>
    {%- endfor %}
  </section>

  <section class="cv-section">
    <h2 class="cv-section-title">Technical Skills</h2>
    <div class="cv-skills-grid">
      {%- for skill in cv.skills %}
      <div class="skill-category" data-skill-index="{{ loop.index0 }}">
        <div class="skill-header">
          <h3 class="skill-title">{{ skill.title }}</h3>
        </div>
        <div
          class="skill-details"
          id="skill-details-{{ loop.index0 }}"
          aria-hidden="true"
        >
          {%- for item in skill.items %}
          <div class="skill-line">
            <strong>{{ item.label }}:</strong> {{ item.values | join(", ") }}
          </div>
          {%- endfor %}
          <div class="skill-description">{{ skill.description }}</div>
        </div>
        <div class="detail-actions">
          <button
            class="more-info-btn"
            type="button"
            data-section="skills"
            data-skill-id="{{ skill.id }}"
            data-index="{{ loop.index0 }}"
          >
            More info
          </button>
        </div>
      </div>
      {%- endfor %}
    </div>
  </section>

  <section class="cv-section">
    <h2 class="cv-section-title">Key Projects</h2>
    <div class="cv-projects">
      {%- for project in cv.projects %}
      <div class="project-item" data-project-index="{{ loop.index0 }}">
        <div class="project-header">
          <h3 class="project-title">{{ project.name }}</h3>
          <span class="project-period">{{ project.period }}</span>
          <div class="project-actions">
            <button
              class="project-toggle toggle"
              type="button"
              aria-expanded="false"
              aria-controls="project-details-{{ loop.index0 }}"
            >
              ▼
            </button>
          </div>
        </div>
        <div
          class="project-details"
          id="project-details-{{ loop.index0 }}"
          aria-hidden="true"
        >
          <p class="project-description">{{ project.description }}</p>
          <div class="project-impact">
            <strong>Impact:</strong> {{ project.impact }}
          </div>
          <div class="project-technologies">
            <strong>Technologies:</strong> {{ project.technologies | join(", ")
            }}
          </div>
          <div class="detail-actions">
            <button
              class="more-info-btn"
              type="button"
              data-section="projects"
              data-index="{{ loop.index0 }}"
            >
              More info
            </button>
          </div>
        </div>
      </div>
      {%- endfor %}
    </div>
  </section>

  <section class="cv-section">
    <h2 class="cv-section-title">Education</h2>
    <div class="cv-education">
      {%- for edu in cv.education %}
      <div class="education-item">
        <h3 class="edu-institution">{{ edu.institution }}</h3>
        <div class="edu-details">
          <span class="edu-location">{{ edu.location }}</span>
          <span class="edu-period">{{ edu.period }}</span>
        </div>
        <div class="edu-program">
          {% if edu.degree %}
          <strong>{{ edu.degree }}</strong>
          {% endif %} {% if edu.program %} {{ edu.program }} {% endif %}
        </div>
        <div class="detail-actions">
          <button
            class="more-info-btn"
            type="button"
            data-section="education"
            data-index="{{ loop.index0 }}"
          >
            More info
          </button>
        </div>
      </div>
      {%- endfor %}
    </div>
  </section>

  <div class="cv-chat-container">
    <div class="chat-toggle" id="chat-toggle-btn">Ask My Digital Proxy</div>
    <div class="chat-modal" id="chat-modal">
      <div class="chat-modal-overlay"></div>
      <div class="chat-modal-content">
        <div class="chat-header">
          <h3 id="chat-title">Ask My Digital Proxy</h3>
          <button class="chat-close" type="button">×</button>
        </div>
        <div class="chat-messages" id="chat-messages">
          <!-- Messages and sample questions are rendered dynamically by cv.js -->
        </div>
        <div class="chat-input-container">
          <input
            type="text"
            id="chat-input"
            placeholder="Ask me anything about Kris's CV..."
          />
          <button type="button" class="chat-send">Send</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Fit Assessment Modal -->
  <div class="fit-modal chat-modal" id="fit-modal">
    <div class="chat-modal-overlay fit-modal-overlay"></div>
    <div class="chat-modal-content">
      <div class="chat-header">
        <h3>Job Fit Assessment</h3>
        <button class="chat-close" type="button">×</button>
      </div>
      <div class="chat-messages">
        <div class="fit-input-section" id="fit-input-section">
          <p class="fit-intro">
            Paste a job description or provide a URL to a public job posting,
            and I'll give you an honest assessment of how well Kris's experience
            matches your requirements.
          </p>

          <div class="fit-tabs">
            <button type="button" class="fit-tab active" data-tab="paste">
              Paste Job Description
            </button>
            <button type="button" class="fit-tab" data-tab="url">
              Job Posting URL
            </button>
          </div>

          <div class="fit-tab-content active" id="tab-paste">
            <textarea
              id="fit-job-text"
              placeholder="Paste the full job description here, or just a brief summary of requirements..."
              rows="8"
            ></textarea>
          </div>

          <div class="fit-tab-content" id="tab-url">
            <input
              type="url"
              id="fit-job-url"
              placeholder="https://example.com/jobs/senior-engineer"
            />
            <p class="fit-url-note">
              Enter a publicly accessible job posting URL
            </p>
          </div>

          <div
            id="fit-error"
            class="fit-error"
            style="display: none"
            aria-live="polite"
          ></div>
          <button type="button" class="fit-submit" id="fit-submit">
            Analyze Fit
          </button>
        </div>

        <div class="fit-loading" id="fit-loading" style="display: none">
          <div class="fit-spinner"></div>
          <p>Analyzing job requirements against Kris's experience...</p>
        </div>

        <div class="fit-results" id="fit-results" style="display: none">
          <!-- Results rendered by JavaScript -->
        </div>
      </div>
    </div>
  </div>
</div>
