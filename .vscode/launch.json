{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch api-worker (wrangler dev)",
      "cwd": "${workspaceFolder}/api-worker",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to api-worker (9229)",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}/api-worker"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch analytics-app (next dev)",
      "cwd": "${workspaceFolder}/analytics-app",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_OPTIONS": "--inspect=9230"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to analytics-app (9230)",
      "port": 9230,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}/analytics-app"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CV: Vitest (run)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--prefix", "cv", "--", "--run"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CV: Vitest (watch)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:watch", "--prefix", "cv"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
